{
  "name": "@rethinkhealth/hl7v2-config",
  "description": "Configuration schema and loader for hl7v2",
  "version": "0.4.1",
  "license": "MIT",
  "author": {
    "name": "Melek Somai",
    "email": "melek@rethinkhealth.io"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "schema.json"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./schema.json": "./schema.json"
  },
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly && pnpm build:schema",
    "build:schema": "node --input-type=module -e \"import{writeFileSync}from'fs';import{jsonSchema}from'./dist/json-schema.js';writeFileSync('schema.json',JSON.stringify(jsonSchema,null,2));\"",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@rethinkhealth/hl7v2-utils": "workspace:*",
    "cosmiconfig": "9.0.0",
    "unified": "11.0.5",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@rethinkhealth/testing": "workspace:*",
    "@rethinkhealth/tsconfig": "workspace:*",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "4.0.14",
    "tsup": "8.5.1",
    "typescript": "^5.9.3",
    "vitest": "4.0.14",
    "zod-to-json-schema": "3.25.0"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": "rethinkhealth/hl7v2.git",
  "homepage": "https://www.rethinkhealth.io/hl7v2/docs",
  "keywords": [
    "config",
    "configuration",
    "hl7v2",
    "schema",
    "settings"
  ],
  "packageManager": "pnpm@10.14.0",
  "publishConfig": {
    "access": "public"
  }
}
