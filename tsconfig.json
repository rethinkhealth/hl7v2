{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
